---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout>
	<section>
		<ul class="grid grid-cols-1 lg:grid-cols-2 place-items-center gap-4">
			{
				posts.map((post) => (
					<li class:list={[
								"p-4 rounded-xl bg-base-200 w-full",
								"first:col-span-2 first:place-self-stretch first:text-xl"]}>
						<a href={`/blog/${post.id}/`}>
							<img class="rounded-xl w-full" width={720} height={360} src={post.data.heroImage} alt="" />
							<h4 class="text-lg my-2">{post.data.title}</h4>
							<p>
								<small><FormattedDate date={post.data.pubDate} /></small>
							</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</Layout>
